<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardPreventCornerOverlap="false"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/ly_evento"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <!--<de.hdodenhof.circleimageview.CircleImageView
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:src="@drawable/img_place_holder"
                    android:id="@+id/item_foto_evento"
                    android:scaleType="centerCrop"
                    android:layout_width="80dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorPrimary"
                    android:layout_height="80dp" />-->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/item_foto_evento"
                    android:scaleType="centerCrop"
                    ></ImageView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:id="@+id/item_id_evento"
                        android:layout_marginRight="16dp"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:textColor="@color/colorPrimary"
                        android:text="_5GZVJOH6BQ4B5P"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/item_descripcion_evento"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:text="DÍA DEL TRABAJO 2019"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/item_observacion"
                        android:textSize="13sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="#90000000"
                        android:text="Prueba de aplicativo ACP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_fecha_registro"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="5dp"
                        android:textColor="#000000"
                        android:text="Fecha Registro: 12/12/2017"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!--<TextView
                        android:id="@+id/item_hora_evento"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="#000000"
                        android:text="Hora: 15:00:00 - 17:00:00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_fecha_hora_invitacion"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#80000000"
                        android:text="Enviado: 15/15/2017 - 18:35:00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>-->
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>